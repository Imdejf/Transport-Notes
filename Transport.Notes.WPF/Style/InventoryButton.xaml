<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Transport.Notes.WPF.Style">
    <Style x:Key="InventoryButton" TargetType="{x:Type Button}">
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontFamily" Value="Helvetica"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="gridMain" Background="{TemplateBinding Background}" CornerRadius="20"
                            BorderThickness="0"
                            BorderBrush="#EFF2F8">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="Black"/>
                <Setter Property="Background" Value="Blue"/>
                <Setter Property="Opacity" Value="0.4"/>
                <Setter Property="Foreground" Value="#EFF2F8"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
</ResourceDictionary>